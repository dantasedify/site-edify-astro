---
import { getEntryBySlug } from "astro:content";
const info = await getEntryBySlug("agencyInfo", "info");
import { footerMenu } from "../../config/index";
---

<footer class="zubuz-footer-section main-footer">
  <div class="container">
    <div class="zubuz-footer-top">
      <div class="row">
        <div class="col-xl-4 col-lg-12">
          <div class="zubuz-footer-textarea">
            <a href="/" aria-label="logo">
              <img src={info?.data?.lightLogo} alt="logo" />
            </a>
            <p>
              {info?.data?.description}
            </p>
            <div class="zubuz-subscribe-one">
              <form action="#">
                <input type="email" placeholder="Email Address" />
                <button
                  class="zubuz-default-btn zubuz-subscription-btn one"
                  type="submit"
                >
                  <span>Subscribe</span>
                </button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-md-4">
          <div class="zubuz-footer-menu extar-margin">
            <div class="zubuz-footer-title">
              <p>Navigation</p>
            </div>
            <ul>
              {
                footerMenu?.navigation?.map((item) => (
                  <li>
                    <a href={item?.url}>{item?.text}</a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="col-xl-2 col-md-4">
          <div class="zubuz-footer-menu">
            <div class="zubuz-footer-title">
              <p>Utility pages</p>
            </div>
            <ul>
              {
                footerMenu?.utility?.map((item) => (
                  <li>
                    <a href={item?.url}>{item?.text}</a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="col-xl-3 col-md-4">
          <div class="zubuz-footer-menu extar-margin">
            <div class="zubuz-footer-title">
              <p>Resources</p>
            </div>
            <ul>
              {
                footerMenu?.resources?.map((item) => (
                  <li>
                    <a href={item?.url}>{item?.text}</a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="zubuz-footer-bottom">
      <div class="zubuz-social-icon order-md-2">
        <ul>
          {
            info?.data?.socialMedia?.map((item: any) => (
              <li>
                <a href={item?.link} target="_blank">
                  <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class={`bi bi-${item?.platform}`} viewBox="0 0 16 16">
                    <path d={`${item?.path}`}/>
                  </svg>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="zubuz-copywright">
        <p>
          &copy;Copyright {new Date().getFullYear()}, All Rights Reserved by {
            info?.data?.agencyName
          }
        </p>
      </div>
    </div>
  </div>
</footer>


