---
import RatingsCard from "./common/RatingsCard.astro";
const { title, data } = Astro.props;
const pathname = Astro.url.pathname;
---

<div class="section zubuz-section-padding2 bg-light">
  <div class="container">
    <div class="zubuz-section-title center">
      <h2>{title}</h2>
    </div>
    <div class="row">
      {data?.map((card) => <RatingsCard {...card} />)}
    </div>
    {
      pathname !== "/testimonial" && pathname !== "/testimonial/" && (
        <div class="zubuz-testimonial-btn">
          <a class="zubuz-default-btn" href="/testimonial">
            <span>View All Reviews</span>
          </a>
        </div>
      )
    }
  </div>
</div>
